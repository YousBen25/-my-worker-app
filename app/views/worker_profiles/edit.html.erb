<div class="container">
  <div class="row d-flex justify-content-center py-4">
    <div class="col-md-6">
      <h1>Update your bio:</h1>
      <%= render "form", worker_profile: @worker_profile %>
       <p><%= @worker_profile.bio %></p>
      <br>
      <h1>Add  new tag <%= @worker_profile.user.first_name %>:</h1>
        <%= simple_form_for([@worker_profile, @worker_profile_tag]) do |f| %>
          <%= f.input :tag, collection: Tag.all, input_html: { class: 'multiple-select' }, include_hidden: false %>
          <%= f.input :rate %>
          <%= f.button :submit, class: "btn-success" %>
        <% end %>
        <ul>
          <% @worker_profile.worker_profile_tags.each do |worker_profile_tag| %>
          <li>
                <span><%= worker_profile_tag.tag.name %>, <%= worker_profile_tag.rate %></span>
                <%= link_to worker_profile_tag_path(worker_profile_tag), method: :delete, class: "delete" do %>
                  <i class="fas fa-times text-white"></i>
                <% end %>
              </li>
          <% end %>
        </ul>
    </div>
  </div>
</div>
