<div class="navbar navbar-expand-sm navbar-light  fixed-top <%=   action_name == "home" ? "navbar-lewagon" : "navbar-lewagon-assistme" %>">
  <a class="navbar-brand" href= "<%= root_path %>">
    <div class="logo-container">
    <p>Service</p>
      <%= cl_image_tag("Group_1_sq3goj",:width=>50, :height=>50) %>
    <p>Champion</p>
    </div>
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="welcome-text-container">
    <ul class = "navbar-nav centrals">
    <li class = "nav-item">
      <a class="nav-link welcome-text">
        <% if user_signed_in? %>
          Welcome, <%= current_user.first_name %> <%= current_user.last_name %>
        <% else %>
          Welcome
        <% end %>
      </a>
    </li>
  </div>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <% if policy(WorkerProfile).create? %>
          <%= link_to "Become a worker", new_worker_profile_path, class: "become-worker"%>
        <% end %>
      </li>
      <li class="nav-item dropdown">
        <% if current_user&.photo&.attached? %>
          <img class="avatar" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="<%= cl_image_path current_user.photo.key , height: 300, width: 400, crop: :fill%>" />
        <% else %>
          <img class="avatar" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://memegenerator.net/img/images/12077751.jpg" />
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if user_signed_in? %>
            <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
            <a class="dropdown-item" href="<%=destroy_user_session_path%>" data-method = "delete">Log Out</a>
          <% else %>
          <a class="dropdown-item" href=<%=new_user_registration_path%>>Register</a>
          <a class="dropdown-item" href=<%=new_user_session_path%>>Sign in</a>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>
