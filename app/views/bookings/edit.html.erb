<div class = "container">
  <%= simple_form_for(@booking) do |f| %>
  <div data-workingdays="<%= @working_hash.to_json %>" id = "working-days"></div>
  <%= f.input :date, as: :string %>
  <ul id = "availabilities"></ul>
  <%= f.input :from, as: :integer, input_html: { value: "#{@booking.date.hour}" }%>
  <%= f.input :duration, as: :integer%>
  <%= f.input :description %>
  <%= f.submit %>
  <% end %>
</div>
